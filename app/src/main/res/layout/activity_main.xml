<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#dedede"
        android:gravity="center"
        android:padding="15dp"
        android:text="download dialog" />

    <TextView
        android:id="@+id/tv_select_time_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#ffcdcd"
        android:gravity="center"
        android:padding="15dp"
        android:text="select time day" />

    <TextView
        android:id="@+id/tv_select_time_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#cdcfff"
        android:gravity="center"
        android:padding="15dp"
        android:text="select time month" />

    <TextView
        android:id="@+id/tv_edit_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#cdffd6"
        android:gravity="center"
        android:padding="15dp"
        android:text="select edit_data" />


    <TextView
        android:id="@+id/tv_select_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#e8cdff"
        android:gravity="center"
        android:padding="15dp"
        android:text="select date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffd2d2"
            android:gravity="center"
            android:padding="5dp"
            android:text="01"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#d3ffd2"
            android:gravity="center"
            android:padding="5dp"
            android:text="02"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#cdceff"
            android:gravity="center"
            android:padding="5dp"
            android:text="03列表"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e2ffd2"
            android:gravity="center"
            android:padding="5dp"
            android:text="04单选"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#d7d2ff"
            android:gravity="center"
            android:padding="5dp"
            android:text="05多选"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_06"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffd2fb"
            android:gravity="center"
            android:padding="5dp"
            android:text="06等待"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_07"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#9296b5"
            android:gravity="center"
            android:padding="5dp"
            android:text="07进度条"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_08"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#b47987"
            android:gravity="center"
            android:padding="5dp"
            android:text="08 编辑"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_09"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ca2f"
            android:gravity="center"
            android:padding="5dp"
            android:text="09自定义"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>